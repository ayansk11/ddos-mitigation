router bgp 65001
 bgp router-id 1.1.1.1

 ! Normal unicast peering to customer AS 65002 (R2)
 neighbor 192.0.2.2 remote-as 65002
 !
 address-family ipv4 unicast
  neighbor 192.0.2.2 activate
 exit-address-family

 ! FlowSpec address family
 address-family ipv4 flowspec
  neighbor 192.0.2.2 activate

  !
  ! FlowSpec rule:
  ! Match: destination IP 10.0.0.2/32, protocol UDP, destination port 80
  ! Action: discard (drop traffic)
  !
  flow destination 10.0.0.2/32 protocol udp destination-port 80
   then discard
 exit-address-family
